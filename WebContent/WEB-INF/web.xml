<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <welcome-file-list>
    <welcome-file>/test02/main.jsp</welcome-file>
    <welcome-file>/test02/add.jsp</welcome-file>
    <welcome-file>/test02/add.html</welcome-file>
  </welcome-file-list>
  
  <!-- JSP로 에러페이지를 나타내기에는 , 부담스러워서 web.xml에 한방에 해결! -->
  <error-page>
     <error-code>404</error-code>
     <location>/err/error_404.jsp</location>	<!-- 여기서 "/"는 WebContent 맞다 -->
  </error-page>
  
  <error-page>
     <error-code>500</error-code>
     <location>/err/error_500.jsp</location>
  </error-page>
  
  
</web-app>